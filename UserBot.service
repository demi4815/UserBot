[Install]
Alias=userbot.service

[Service]
ExecStart=path/UserBot.sh
RemainAfterExit=no
Restart=on-failure
Type=simple
User=myUser

[Unit]
After=network.target
AssertFileIsExecutable=path/UserBot.sh
AssertFileNotEmpty=path/UserBot.sh
AssertPathExists=path/UserBot.sh
CollectMode=inactive
DefaultDependencies=yes
Description=Service that run the script that manage a UserBot
FailureAction=reboot
SuccessAction=none
Wants=multi-user.target
